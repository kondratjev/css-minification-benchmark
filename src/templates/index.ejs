<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CSS Minification benchmark V2 results</title>
    <description>Benchmark of modern popular CSS minification tools</description>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <style>body{font-size:.9rem}.table thead th{text-align:center;vertical-align:middle}.table td{vertical-align:middle}</style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="mt-2 mb-4 text-center">
        <h1 class="h3">CSS Minification Benchmark V2</h1>
        <a
          href="https://github.com/kondratjev/css-minification-benchmark"
          title="View the GitHub repository"
        >GitHub</a>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-sm table-hover table-striped">
          <thead>
            <tr>
              <th>File</th>
              <% data[0].measurements.forEach(result => { %>
                <th>
                  <a href="<%= result.minifier.url %>" target="_blank"><%= result.minifier.name %> - <%= result.minifier.version %></a>
                </th>
              <% }) %>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(row => { %>
              <tr>
                <td>
                  <div class="d-flex flex-column align-items-start gap-1">
                    <span><%= row.filename %></span>
                    <span class="badge bg-secondary"><%= row.originalSize %> bytes (100%)</span>
                  </div>
                </td>
                <% row.measurements.forEach(result => { %>
                  <td>
                    <div class="d-flex flex-column align-items-start gap-1">
                      <span class="badge <%- result.elapsedTime === row.stats.bestTime ? 'bg-success' : result.elapsedTime === row.stats.worstTime ? 'bg-danger' : 'bg-secondary' %>"><%= result.elapsedTime %> ms (Ã—<%= result.differential %>)</span>
                      <span class="badge <%- result.minifiedSize === row.stats.bestSize ? 'bg-success' : result.minifiedSize === row.stats.worstSize ? 'bg-danger' : 'bg-secondary' %>"><%= result.minifiedSize %> bytes (<%= result.efficiency %>%)</span>
                    </div>
                  </td>
                <% }) %>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="machine-info my-2">
        <h2 class="h4">Benchmark info:</h2>
        <div class="d-flex flex-column bg-light border text-dark p-3">
          <span>Date: <%= info.date %></span>
          <span>CPU: <%= info.cpu %></span>
          <span>OS: <%= info.os %></span>
          <span>Bun: <%= info.bun %></span>
        </div>
      </div>
    </div>
  </body>
</html>
