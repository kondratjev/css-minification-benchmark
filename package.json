{
  "name": "css-minification-benchmark",
  "version": "1.0.0",
  "description": "Benchmark of popular CSS minification tools",
  "author": "Maksim Kondratev <kondratj3v@gmail.com>",
  "homepage": "https://github.com/kondratjev/css-minification-benchmark",
  "license": "MIT",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kondratjev/css-minification-benchmark.git"
  },
  "bugs": {
    "url": "https://github.com/kondratjev/css-minification-benchmark/issues"
  },
  "keywords": [
    "css",
    "minification",
    "benchmark"
  ],
  "scripts": {
    "bench": "bun ./bin/bench.ts",
    "bench-html": "bun ./bin/bench.ts --html > docs/index.html",
    "check": "npm run lint",
    "lint": "xo",
    "test": "npm run lint && npm run bench"
  },
  "bin": {
    "css-minification-benchmark": "bin/bench.ts"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "animate.css": "^4.1.1",
    "bootstrap": "^5.3.2",
    "clean-css": "5.3.3",
    "cssnano": "6.0.2",
    "cssnano-preset-advanced": "6.0.2",
    "csso": "5.0.5",
    "esbuild": "0.19.10",
    "lightningcss": "1.22.1",
    "normalize.css": "^8.0.1",
    "postcss": "8.4.32",
    "purecss": "^3.0.0",
    "sanitize.css": "^13.0.0",
    "sass": "^1.69.6",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@types/clean-css": "^4.2.11",
    "@types/csso": "^5.0.4",
    "bun-types": "^1.0.20",
    "gzip-size": "^6.0.0",
    "picocolors": "^1.0.0",
    "prettier": "^3.1.1",
    "table": "^6.8.1",
    "typescript": "^5.3.3",
    "xo": "^0.56.0"
  },
  "xo": {
    "space": true,
    "rules": {
      "arrow-body-style": "off",
      "capitalized-comments": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "new-cap": "off",
      "no-negated-condition": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "operator-linebreak": [
        "error",
        "after"
      ],
      "no-await-in-loop": "off",
      "quote-props": [
        "error",
        "consistent"
      ],
      "spaced-comment": "off",
      "unicorn/prefer-module": "off"
    }
  }
}
